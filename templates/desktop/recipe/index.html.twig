{% set active = "recipe" %}
{% extends 'desktop/base.html.twig' %}

{% block title %}Recettes{% endblock %}

{% block body %}
    <div class="row">
        <ul class="list-group">
            <li class="list-group-item list-group-item-action active">
                Plat chaud
            </li>
            {% for recipe in recipeRepository.findBy({"type": constant("App\\Entity\\Recipe::TYPE_MAIN_COURSE")}, {"name": "ASC"}) %}
                {% include "desktop/recipe/shared/_recipe_row.html.twig" %}
            {% endfor %}
        </ul>
        <ul class="list-group">
            <li class="list-group-item list-group-item-action active">
                Dessert
            </li>
            {% for recipe in recipeRepository.findBy({"type": constant("App\\Entity\\Recipe::TYPE_DESSERT")}, {"name": "ASC"}) %}
                {% include "desktop/recipe/shared/_recipe_row.html.twig" %}
            {% endfor %}
        </ul>
    </div>
{% endblock %}
